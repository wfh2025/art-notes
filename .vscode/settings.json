{
    "files.eol": "\n",
    "files.encoding": "utf8",
    "editor.rulers": [150],
    "editor.lineNumbers": "on",
    "editor.cursorBlinking": "smooth",
    "editor.tabSize": 2,
    "editor.fontSize": 14,
    "editor.wordWrap": "on",
    "editor.formatOnSave": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "selection",
    "editor.fontFamily": "霞鹭文楷, Menlo, Monaco, 'Courier New', monospace",
    "files.autoSave": "afterDelay",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onFailed",
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.showContextMenu": true,
    "latex-workshop.message.error.show": true,
    "latex-workshop.message.warning.show": true,
    "latex-workshop.formatting.latexindent.path": "/opt/homebrew/bin/latexindent",
    "latex-workshop.formatting.latex": "latexindent",
    "[tex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop"
    },
    "terminal.integrated.profiles.windows": {
        "MSYS2-shell-cmd": {
            "path": "D:\\install-dir\\msys64\\msys2_shell.cmd",
            "args": [
                        "-defterm", 
                        "-here", 
                        "-no-start", 
                        "-ucrt64"
                    ],
            "icon": "terminal-bash"
        }
    },
    "terminal.integrated.defaultProfile.windows": "MSYS2-shell-cmd",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav",
        "*.vrb"
    ]
}
